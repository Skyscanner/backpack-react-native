{
  "name": "backpack",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^8.12.0",
    "npm": "^6.4.1"
  },
  "scripts": {
    "preinstall": "npx ensure-node-env",
    "postinstall:native": "(cd ./native && npm install)",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --no-ci",
    "lerna": "lerna",
    "clean:dist": "rm -rf dist",
    "clean:lerna": "lerna clean --yes",
    "clean:node_modules": "rm -rf node_modules",
    "clean:node_modules_native": "(cd ./native && rm -rf node_modules)",
    "clean": "npm run clean:dist && npm run clean:lerna && npm run clean:node_modules && npm run clean:node_modules_native",
    "lint:js": "eslint . --ext .js,.jsx",
    "lint:js:fix": "eslint . --ext .js,.jsx --fix",
    "lint": "npm run lint:js",
    "jest:native:update": "./subshell ./native jest --updateSnapshot",
    "jest:native:watch": "(cd ./native && jest --watch)",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "build": "(cd ./native && npm run link)",
    "native": "./subshell ./native npm run storybook",
    "check-bpk-dependencies": "node scripts/npm/check-bpk-dependencies.js",
    "fix-bpk-dependencies": "node scripts/npm/check-bpk-dependencies.js --fix",
    "test": "npm run lint && npm run check-bpk-dependencies && jest --coverage && npm run flow",
    "test:native": "./subshell ./native npm test -- --forceExit",
    "check-owners": "npm whoami && ( node scripts/npm/get-owners.js | grep -E $(npm whoami) ) && node scripts/npm/check-owners.js",
    "publish": "npm run check-owners && npm run build && git pull --rebase && npm run flow stop && npm run test && lerna publish",
    "release": "npm run publish",
    "danger": "danger ci",
    "prettier": "prettier --config .prettierrc --write \"**/*.js\"",
    "create-component": "node scripts/npm/create-component.js",
    "link": "react-native link",
    "start": "react-native start",
    "ios": "(cd native && react-native run-ios --simulator=\"iPhone 8\")",
    "android:emulator": "$ANDROID_SDK_ROOT/emulator/emulator -avd bpk-avd",
    "android:emulator:min": "$ANDROID_SDK_ROOT/emulator/emulator -avd bpk-avd-min",
    "android:build": "(cd native && react-native run-android)",
    "android": "npm run android:emulator & npm run android:build",
    "storybook": "(cd native && storybook start -p 7007 --root ../)"
  },
  "rnpm": {
    "assets": [
      "bpk-svgs/dist/font/"
    ]
  },
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "testRegex": ".*-test(\\.ios)?(\\.android)?\\.js$",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|bpk|@skyscanner|lodash-es)"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 75,
        "branches": 70,
        "functions": 75,
        "lines": 75
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Skyscanner/backpack-react-native.git"
  },
  "author": "Backpack Design System <backpack@skyscanner.net>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-links": "^3.4.11",
    "babel-jest": "^23.4.2",
    "colors": "^1.3.2",
    "danger": "^3.8.6",
    "eslint-config-skyscanner-with-prettier": "^0.4.0",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint_d": "^7.1.1",
    "flow-bin": "^0.88.0",
    "flow-typed": "^2.5.1",
    "globby": "^8.0.1",
    "husky": "^1.2.0",
    "jest": "^21.2.1",
    "lerna": "^3.6.0",
    "lint-staged": "^8.0.5",
    "lodash": "^4.17.11",
    "prompt": "^1.0.0",
    "prop-types": "^15.5.10",
    "@storybook/react-native": "^3.3.10",
    "babel-preset-react-native": "^4.0.0",
    "bpk-svgs": "^6.0.6",
    "bpk-tokens": "^27.4.1",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-native": "0.55.3",
    "react-native-linear-gradient": "react-native-community/react-native-linear-gradient#20928ce2ac8038e8545c7f6c3faab05f866deabd",
    "react-test-renderer": "16.3.1"
  }
}
